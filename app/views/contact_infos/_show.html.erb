<% # Clients of this partial must supply the following variable:
   # contact_info (subclass of ContactInfo)
   humanized_name = contact_info.type.underscore.humanize
%>

<tr class='contact-info'>
  <td><%= contact_info.value %></td>
  <td><%= (t contact_info.is_searchable ? :".searchable" : :".not_searchable") %> (<%= link_to (t :".change_searchable"),
                    toggle_is_searchable_contact_info_path(contact_info),
                    method: :put %>)</td>

  <td>
    <% if contact_info.verified %>
      <%= (t :".verified") %>
    <% else %>
      <%= link_to (t :".click_to_verify"),
                  resend_confirmation_contact_info_path(contact_info),
                  method: :put %>
    <% end %>
  </td>

  <td><%= link_to (t :".delete"),
                    contact_info_path(contact_info),
                    method: :delete,
                    confirm: (t :".confirm_delete", email: contact_info.value) %></td>
</tr>
