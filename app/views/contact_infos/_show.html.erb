<% # Clients of this partial must supply the following variable:
   # contact_info (subclass of ContactInfo)
   humanized_name = contact_info.type.underscore.humanize
%>

<tr>
  <td><%= contact_info.value %></td>
  <td><%= contact_info.is_searchable ? (t :".searchable") : (t :".not_searchable") %></td>
  <td><%= button_to (t :".toggle_searchable"),
                    toggle_is_searchable_contact_info_path(contact_info),
                    method: :put, class: "standard" %></td>

  <td><%= contact_info.verified ? (t :".verified") : (t :".unverified") %></td>
  <td><%= button_to (t :".resend_verification"),
                    resend_confirmation_contact_info_path(contact_info),
                    method: :put,
                    class: "standard" unless contact_info.verified %></td>
  <td><%= button_to (t :".delete"),
                    contact_info_path(contact_info),
                    method: :delete,
                    confirm: (t :".confirm_delete", email: contact_info.value),
                    class: "standard" %></td>
</tr>
