<%= page_heading (t :".page_heading") %>

<style type='text/css'>
  ol li { margin: 10px 0; }
  input[type='submit'] { margin: 10px 0 30px 40px; }
</style>

<% emails = current_user.email_addresses.collect(&:value) %>

<ol>
  <li><%= t :".find_email_sent", count: emails.size,
            addresses: (I18n.enumerate :any, emails, expand: false) %></li>
  <li><%= t :".click_link", count: emails.size %></li>
  <li><%= t :".return_and_click" %></li>
</ol>

<%= button_to (t :".i_clicked_verification_link"),
              registration_i_verified_path,
              method: :put, class: 'standard' %>

<p style="margin: 80px 0 0 0; width: 90%">
  <%= t :".resend_verification_html", count: emails.size,
        link: (link_to (t :".email_link_single_html"),
                      resend_confirmation_contact_info_path(current_user.email_addresses.first),
                      method: :put),
        links: (raw I18n.enumerate :any, current_user.email_addresses.collect { |ea|
            link_to (t :".email_link_multiple_html", email: ea.value),
                    resend_confirmation_contact_info_path(ea),
                    method: :put
          }, expand: false)
    %>
</p>
