<div id="top-nav-frame" class="<%= yield :top_nav_class %>">
  <div id="top-nav-content">

    <div id="top-nav-logo">
      <a href="<%= root_path %>" id="top-nav-logo-link"></a>
    </div>

    <div id="top-nav-account">
      <% if signed_in? %>
        <%= t :".welcome_html", user: (link_to current_user.username, main_app.profile_path), sign_out: (link_to (t :".sign_out"), main_app.logout_path) %>
      <% else %>
        <% unless current_page?(main_app.signup_path) %>
          <%= t :".sign_up_or_in_html", sign_up: (link_to (t :".sign_up"), main_app.signup_path), sign_in: (link_to (t :".sign_in"), main_app.login_path) %>
        <% else %>
          <%= link_to (t :".only_sign_in"), main_app.login_path %>
        <% end %>
      <% end %>
    </div>

    <div id="top-nav-links">
      <% if false %>
      <ul>
        <li>
          <%= render "layouts/application_top_nav_link",
                     target_text:            "ABOUT",
                     target_id:              "top-nav-about-link",
                     target_path:            "#",
                     target_current_symbol:  :top_nav_about_current %>
        </li>
        <li>
          <%= render "layouts/application_top_nav_link",
                     target_text:            "API",
                     target_id:              "top-nav-api-link",
                     target_path:            main_app.api_path,
                     target_current_symbol:  :top_nav_api_current %>
        </li>
        <li>
          <%= render "layouts/application_top_nav_link",
                     target_text:            "SIGN IN",
                     target_id:              "top-nav-account-link",
                     target_path:            "#",
                     target_current_symbol:  :top_nav_account_current %>
        </li>
      </ul>
      <% end %>
    </div>

  </div>
</div>
