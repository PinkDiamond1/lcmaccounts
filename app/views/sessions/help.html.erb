<% @parent_col_id = "signin-help" %>

<%= page_heading (t :".page_heading") %>

<div class="row">
  <div class="col-xs-12">
    <p><%= t :".if_you_know_username_or_email.content_html",
             link: (mail_to "info@openstax.org",
                            (t :".if_you_know_username_or_email.contact_customer_support"))
          %></p>
  </div>
</div>

<div class="row">
  <div class="col-sm-6">
    <%= lev_form_for :help, url: '' do |f| %>
      <%= standard_field form: f, name: :username_or_email, type: :text_field, label: (t :".username_or_email") %>
      <%= submit_tag (t :".submit"), class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
